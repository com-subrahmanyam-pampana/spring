<?xml version="1.0" encoding="UTF-8"?>


<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id = "helloWorld" class = "java_project.C_events.a_applicationcontextevents.HelloWorld">
        <property name = "message" value = "Hello World!"/>
    </bean>

    <bean id = "cStartEventHandler" class = "java_project.C_events.a_applicationcontextevents.CStartEventHandler"/>
    <bean id = "cStopEventHandler" class = "java_project.C_events.a_applicationcontextevents.CStopEventHandler"/>

</beans>